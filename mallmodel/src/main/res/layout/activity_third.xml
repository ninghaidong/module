<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdActivity"
    tools:ignore="ResourceName">


    <Button
        android:id="@+id/btu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击" />

    <com.xbtx.mallmodel.CountDownProgressBar
        android:id="@+id/cpb_countdown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/red_bag"
        android:padding="@dimen/dp_2"
        android:visibility="visible"
        app:countDown_centerTextColor="@color/transparent"
        app:countDown_centerTextSize="@dimen/sp_12"
        app:countDown_circleWidth="@dimen/dp_5"
        app:countDown_firstColor="@color/white"
        app:countDown_isShowGradient="true"
        app:countDown_secondColor="#ff314a" />


    <RelativeLayout
        android:id="@+id/zhuanpan_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/zhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_turntable" />

        <ImageView
            android:id="@+id/lottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_lottery_btu" />

    </RelativeLayout>

</LinearLayout>